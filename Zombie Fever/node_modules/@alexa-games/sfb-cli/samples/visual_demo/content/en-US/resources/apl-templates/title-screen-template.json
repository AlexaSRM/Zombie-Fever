                            "width": "100vw",
                            "height": "40vh",
                            "top": "60vh",
                            "fontSize": 80,
                            "opacity": 0,
                            "onMount": [
                                {
                                    "type": "AnimateItem",
                                    "easing": "ease-in-out",
                                    "duration": 3000,
                                    "value": [
